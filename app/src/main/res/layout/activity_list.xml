<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/testBacky"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blurred_1_10"
    android:padding="0dp"
    tools:context="com.br.mreza.musicplayer.ListActivity">

    <ImageView
        android:id="@+id/progress_indicader"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginBottom="100dp"
        android:tint="#0288D1"
        app:srcCompat="@drawable/ic_play_circle_filled_black_24dp" />

    <TextView
        android:id="@+id/wellcome_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="@string/app_name_2020"
        android:textColor="@color/accent_color"
        android:textSize="45sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="170dp"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/scannig_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:alpha="0.6"
            android:elevation="10dp"
            android:ellipsize="end"
            android:fontFamily="monospace"
            android:gravity="center"
            android:maxLines="2"
            android:text="Scanning..."
            android:textColor="@color/accent_color"
            android:textSize="15sp"
            android:visibility="invisible" />


        <com.br.mreza.musicplayer.newdesign.customviews.DotProgressBar
            android:id="@+id/load_progress_first"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:elevation="8dp"
            android:max="100"
            android:progress="20" />

        <TextView
            android:id="@+id/load_percent_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:elevation="8dp"
            android:fontFamily="sans-serif-condensed"
            android:text="10%"
            android:textColor="@color/accent_color"
            android:textSize="25sp" />

    </LinearLayout>
</FrameLayout>
