<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"

    android:layout_margin="4dp"
    android:background="@drawable/shader_for_album_background"
    android:elevation="10dp"
    android:gravity="end"
    android:orientation="vertical"
    android:padding="1dp">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_list_art_cover">

        <TextView
            android:id="@+id/first_list_album_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center|bottom"
            android:maxLines="1"
            android:shadowRadius="10"
            android:text="TextView"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/album_list_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"
            android:fontFamily="sans-serif-condensed"
            android:shadowRadius="10"
            android:text="Tracks: 10"
            android:textSize="14sp" />
    </LinearLayout>

    <com.br.mreza.musicplayer.MBN.customViews.SoftRoundEdgeImageView
        android:id="@+id/first_list_art_cover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="50dp"
        android:transitionName="img_art_trans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

