<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mbn_background_for_appbar_super_ultra_light"
    android:clickable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@drawable/try_for_background_current_queue"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/allsongs_list_item_drag"
            android:layout_width="25dp"
            android:layout_height="45dp"
            android:background="@android:color/transparent"
            android:paddingStart="16dp"
            android:scaleType="matrix"
            android:scaleX="-1"
            android:tint="@color/colorPrimary"
            app:srcCompat="@mipmap/ic_action_move_remote_layout" />

        <ImageView
            android:id="@+id/art_image_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/allsongs_list_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/concert_one"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="Revival"
                android:textColor="@android:color/black"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/allsongs_list_item_artist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/pt_sans_narrow"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="Selena Gomes"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/allsongs_list_item_extra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/concert_one"
                    android:gravity="end"
                    android:maxLines="1"
                    android:text="TextView"
                    android:textSize="13sp" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/allsongs_list_item_option"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:scaleType="center"
            android:tint="@color/notification_text_color"
            app:srcCompat="@drawable/ic_more_vert_black_24dp" />

    </LinearLayout>

</LinearLayout>