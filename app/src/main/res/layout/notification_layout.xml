<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notification_main_layout"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal">


    <!--<ImageView-->
    <!--android:id="@+id/notification_background"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_marginEnd="120dp"-->
    <!--android:scaleType="centerCrop"-->
    <!--android:tint="@color/mbn_background_for_appbar_super_ultra_light"-->
    <!--app:srcCompat="@drawable/day_fog" />-->

    <ImageView
        android:id="@+id/notification_cover_image"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/night_rain_1" />

    <!--<View-->
    <!--android:layout_width="0dp"-->
    <!--android:layout_height="0dp"-->
    <!--android:background="@drawable/shader_notification_back"-->
    <!--app:layout_constraintBottom_toBottomOf="parent"-->
    <!--app:layout_constraintLeft_toLeftOf="parent"-->
    <!--app:layout_constraintRight_toRightOf="parent"-->
    <!--app:layout_constraintTop_toTopOf="parent" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="end"
        android:orientation="vertical"
        android:paddingEnd="120dp">

        <TextView
            android:id="@+id/notification_titile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center|start"
            android:maxLines="1"
            android:paddingStart="16dp"
            android:shadowColor="@android:color/darker_gray"
            android:shadowRadius="2"
            android:text="TextView"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/notification_artist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center|start"
            android:maxLines="1"
            android:paddingStart="25dp"
            android:text="TextView"
            android:textColor="@color/notification_text_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/notification_album"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center|start"
            android:maxLines="1"
            android:paddingStart="25dp"
            android:text="TextView"
            android:textColor="@color/notification_text_color"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:orientation="horizontal"
            android:padding="2dp">

            <!--<Space-->
            <!--android:layout_width="170dp"-->
            <!--android:layout_height="match_parent" />-->

            <ImageButton
                android:id="@+id/notification_pre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:tint="@color/mbn_dark_grey_for_button"
                app:srcCompat="@drawable/ic_rewind_arrow" />

            <ImageButton
                android:id="@+id/notification_play"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:tint="@color/mbn_dark_grey_for_button"
                app:srcCompat="@drawable/ic_play_button" />

            <ImageButton
                android:id="@+id/notification_next"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:tint="@color/mbn_dark_grey_for_button"
                app:srcCompat="@drawable/ic_skip" />

            <ImageButton
                android:id="@+id/notification_stop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:tint="@color/mbn_dark_grey_for_button"
                app:srcCompat="@drawable/ic_cancel" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>