<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notification_main_layout"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/accent_color"
    android:orientation="horizontal">


    <!--<ImageView-->
    <!--android:id="@+id/notification_background"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:scaleType="centerCrop"-->
    <!--android:tint="@color/mbn_background_for_appbar_light"-->
    <!--app:srcCompat="@drawable/day_fog" />-->

    <ImageView
        android:id="@+id/notification_cover_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="end"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/notification_cover_image_tint"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="end"
        android:scaleType="centerCrop" />
    <!--<View-->
    <!--android:layout_width="0dp"-->
    <!--android:layout_height="0dp"-->
    <!--android:background="@drawable/shader_notification_back"-->
    <!--app:layout_constraintBottom_toBottomOf="parent"-->
    <!--app:layout_constraintLeft_toLeftOf="parent"-->
    <!--app:layout_constraintRight_toRightOf="parent"-->
    <!--app:layout_constraintTop_toTopOf="parent" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:gravity="end"
        android:orientation="vertical"
        android:paddingEnd="90dp">

        <TextView
            android:id="@+id/notification_titile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center|start"
            android:maxLines="1"
            android:paddingStart="16dp"
            android:text="TextView"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:orientation="horizontal">

            <!--<Space-->
            <!--android:layout_width="170dp"-->
            <!--android:layout_height="match_parent" />-->

            <ImageButton
                android:id="@+id/notification_pre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:tint="@android:color/white"
                app:srcCompat="@drawable/ic_rewind_arrow" />

            <ImageButton
                android:id="@+id/notification_play"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:tint="@android:color/white"
                app:srcCompat="@drawable/ic_play_button" />

            <ImageButton
                android:id="@+id/notification_next"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:tint="@android:color/white"
                app:srcCompat="@drawable/ic_fast_forward_arrow" />

            <Button
                android:id="@+id/notification_stop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/shader_for_a_b_butt"
                android:backgroundTint="@android:color/white"
                android:fontFamily="@font/pt_sans_narrow"
                android:text="Stop"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>