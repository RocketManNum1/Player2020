<resources>


    <style name="text_dark_mode" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="text_view_dark" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/round_background_empty</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">#ffcccccc</item>
    </style>

    <style name="text_view_dark_text_view" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/round_background_empty</item>
        <item name="android:padding">10dp</item>
        <item name="android:focusable">false</item>
        <item name="android:textColorHint">#ffcccccc</item>
    </style>

    <style name="button_dark" parent="text_view_dark">
        <item name="android:gravity">center</item>
        <item name="android:focusable">false</item>
        <item name="android:background">@drawable/button_state_changer</item>
        <item name="android:textColor">@drawable/button_state_changer</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
